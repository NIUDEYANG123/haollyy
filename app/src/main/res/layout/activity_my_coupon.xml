<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.haolyy.haolyy.custom.TopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:drawableLeft="@drawable/icon_back"
        app:drawableLeftVisibility="true"
        app:title="我的卡券"
        app:titleTextColor="#FF222222"
        app:titleTextSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:background="@color/split_line"
        android:layout_height="1dp" />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:xTabIndicatorColor="#FE7537"
        app:xTabIndicatorHeight="2dp"
        app:xTabIndicatorWidth="64dp"
        app:xTabSelectedTextColor="#FE7537 "
        app:xTabTextColor="#4A4A4A"
        app:xTabTextSize="16sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>