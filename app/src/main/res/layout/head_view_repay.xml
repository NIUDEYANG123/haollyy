<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_repay_header"
    android:layout_height="300dp">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_repay_name"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="赢计划A-2018010101期（共3期）"
        android:textColor="#FF4A4A4A"
        android:textSize="16sp"
        />
    <View
        android:id="@+id/line_help"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_repay_name"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_help"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还款方式"
            android:textColor="#FF9B9B9B"
            android:textSize="14sp"
            />
        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起息时间"
            android:textColor="#FF9B9B9B"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到期时间"
            android:textColor="#FF9B9B9B"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_help"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_repay_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每月付息，到期还本"
            android:textColor="#FF666666"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_start_date"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.01.01"
            android:textColor="#FF666666"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.01.01"
            android:textColor="#FF666666"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_repay_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待回款 (3)"
        android:textColor="#FFFE7537"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/tv_repay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018.03.01"
        android:textColor="#4a4a4a"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="56dp"
        />
    <View
        android:layout_width="0.5dp"
        android:layout_height="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="124dp"
        android:background="#e6e6e6"
        />
    <LinearLayout
        android:id="@+id/ll_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="154dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回款本金："
            android:textColor="#FF9B9B9B"
            android:textSize="14sp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回款利息："
            android:textColor="#FF9B9B9B"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回款奖励："
            android:textColor="#FF9B9B9B"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ll_help"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_repay_corpus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--元"
            android:textColor="#FF4a4a4a"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_repay_interest"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--元"
            android:textColor="#FF4a4a4a"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00元"
            android:textColor="#FF4a4a4a"
            android:textSize="14sp"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>