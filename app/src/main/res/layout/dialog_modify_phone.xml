<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="307dp"
    android:background="@drawable/shape_white_radius5"
    android:layout_height="303dp">

    <ImageView
        android:id="@+id/iv_modify_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_modify_phone_success"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/tv_modify_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF333333"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_modify_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="39dp"
        android:text="-----------"/>
    <Button
        android:id="@+id/btn_modify_phone"
        android:layout_width="0dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_height="45dp"
        android:layout_marginTop="38dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_modify_phone"
        android:background="@drawable/shape_orange_radius5"
        android:text="确定"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>