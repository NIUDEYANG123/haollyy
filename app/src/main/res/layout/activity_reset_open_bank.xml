<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">
    <com.haolyy.haolyy.custom.TopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        app:drawableLeft="@drawable/icon_back"
        app:drawableLeftVisibility="true"
        app:title="换绑银行卡"
        app:titleTextColor="#FF4A4A4A"
        app:titleTextSize="16sp"
        />

    <View
        android:layout_width="match_parent"
        android:background="@color/split_line"
        android:layout_height="10dp" />


    <LinearLayout
        android:id="@+id/ll_bank_list"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_height="45dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="开户银行"
            android:textColor="#FF9B9B9B"
            android:textSize="14sp"
            android:gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_bank_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                tools:src="@drawable/abc"/>
            <TextView
                android:id="@+id/tv_bank_name_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:text="请选择"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_height="45dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="银行卡号"
            android:textColor="#FF9B9B9B"
            android:textSize="14sp"
            android:gravity="center_vertical"
            />
        <com.haolyy.haolyy.custom.ClearEditText
            android:id="@+id/et_bank_code"
            android:layout_width="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:inputType="number"
            android:paddingRight="20dp"
            android:layout_height="match_parent"
            android:hint="请输入银行卡号"
            android:textColorHint="#FFD7D7D7"
            android:textSize="14sp"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_height="45dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="预留手机号"
            android:textColor="#FF9B9B9B"
            android:textSize="14sp"
            android:gravity="center_vertical"
            />
        <com.haolyy.haolyy.custom.ClearEditText
            android:id="@+id/et_reserved_phone"
            android:layout_width="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="请输入银行预留手机号"
            android:paddingRight="20dp"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="#FFD7D7D7"
            android:textSize="14sp"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/split_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#FF9B9B9B"
            android:text="短信验证码"/>
        <com.haolyy.haolyy.custom.ClearEditText
            android:id="@+id/ed_message_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入短息验证码"
            android:layout_marginLeft="16dp"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="#222222"
            android:textColorHint="#DDDDDD"
            android:textSize="14sp" />

        <ImageView
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/line_horizontal" />

        <TextView
            android:id="@+id/tv_message_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="获取验证码"
            android:textColor="#FFFE7537"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/split_line">
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_gradient_no_corners"
            android:gravity="center"
            android:text="更换银行卡"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>