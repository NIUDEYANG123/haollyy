<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_f5"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/white"
        />
    <com.haolyy.haolyy.custom.TopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        app:drawableLeft="@drawable/icon_back"
        app:drawableLeftVisibility="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="用户信息"
        app:titleTextColor="#4A4A4A"
        app:titleTextSize="18sp"
        app:top_background="#FFFFFF" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="原密码"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            />
        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="@color/text_9b9b9b"
            android:hint="请输入当前登录密码"
            android:inputType="textPassword"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新密码"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            />
        <EditText
            android:id="@+id/et_pass_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:background="@null"
            android:textColorHint="@color/text_9b9b9b"
            android:hint="密码由6-20位英文字母、数字组成"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:layout_marginBottom="124dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确认密码"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginRight="16dp"
            />
        <EditText
            android:id="@+id/et_pass2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:background="@null"
            android:textColorHint="@color/text_9b9b9b"
            android:hint="请再次输入您的新密码"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_pass2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_FE9133"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>