<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_white_radius12"
    android:layout_width="270dp"
    android:layout_height="160dp">
    <TextView
        android:id="@+id/tv_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定拨打400-999-6780吗？"
        android:textColor="#FF222222"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#4D4D4D"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/v_help"
        android:layout_width="0.5dp"
        android:layout_height="44dp"
        android:background="#4D4D4D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:text="取消"
        android:gravity="center"
        android:textColor="#FFFE7537"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/v_help"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:text="确定"
        android:gravity="center"
        android:textColor="#FFFE7537"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@id/v_help"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>