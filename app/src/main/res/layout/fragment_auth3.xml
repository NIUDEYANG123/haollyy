<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_new_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:maxLength="11"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="请输入新手机号"
        android:paddingLeft="12dp"
        android:textColor="@color/text_222222"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="@color/bg_EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/et_new_phone" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cs_image"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line0">

        <EditText
            android:id="@+id/et_image2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:maxLength="4"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入图形验证码"
            android:textColor="@color/text_222222"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_image_code2" />

        <ImageView
            android:id="@+id/iv_image_code2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="@color/bg_EEEEEE"
        app:layout_constraintTop_toBottomOf="@+id/cs_image" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1">

        <EditText
            android:id="@+id/et_sms2"
            android:inputType="number"
            android:maxLength="6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入短信验证码"
            android:textColor="@color/text_222222"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/view2" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:background="@color/bg_E6E6E6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_message2"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_message2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:text="发送验证码"
            android:gravity="center"
            android:textColor="@color/bg_FE9133"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_auth_change"
        android:layout_width="315dp"
        android:layout_height="40dp"
        android:layout_marginTop="210dp"
        android:background="@color/bg_FE9133"
        android:gravity="center"
        android:text="更换手机号"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>